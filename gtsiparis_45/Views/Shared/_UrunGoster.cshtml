@model gtsiparis_45.Urun

<div class="row">
    <div class="col-sm-6">
        <span class="border border-primary">Ürünün Adı:</span>@Html.DisplayFor(model => model.Adi)<br />
        <span class="border border-primary">Satıcı Adı :</span> @Html.DisplayFor(model => model.Uretici.Adi)<br />
        <span class="border border-primary">Fiyatı :</span> @Html.DisplayFor(model => model.Fiyat)<br />
        <span class="border border-primary">Stokta Kalan :</span> @Html.DisplayFor(model => model.Stok.SonStok) <br />
    </div>
    <div class="col-sm-4">Resim Gelecek</div>
    <div class="col-sm-2">
        <div class="SiparisEkle">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Sepete Ekle", "UrunGosterDetay", "Genel", new { id = Model.Id }, new { @class = "magnific-form" })</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@if (ViewBag.Message != null)
{
    <script>

    $(document).ready(function () {

    alert('@ViewBag.Message');

});

    </script>

}
<script type="text/javascript">

        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                $("#loginModal").modal('show');
            });

            $("#btnHideModal").click(function () {
                $("#loginModal").modal('hide');
            });
        });
</script>  
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


